                    </Path>
                </Canvas>
            </Viewbox>
        </Grid>
        <Grid x:Name="ContentGrid" Width="455" Height="260" VerticalAlignment="Center" HorizontalAlignment="Center" Panel.ZIndex="1">
            <Grid x:Name="HeaderGrid" Width="455" Height="120" VerticalAlignment="Top">
                <TextBlock x:Name="ProductName" FontSize="40" HorizontalAlignment="Left" FontWeight="Bold" VerticalAlignment="Center">Product name</TextBlock>
                <TextBlock x:Name="Version" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,60,0,0" FontWeight="SemiBold">Version 0.0</TextBlock>
            </Grid>
            <Grid x:Name="InteractionGrid" Width="455" Height="140" VerticalAlignment="Bottom">
                <Grid x:Name="InstallPanel" Style="{StaticResource InteractGrid}">
                    <Border x:Name="InstallButton" Style="{StaticResource InteractButton}" Width="400" HorizontalAlignment="Center" MouseLeftButtonDown="InstallButton_Click">
                        <TextBlock x:Name="InstallText" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center">Install</TextBlock>
                    </Border>
                </Grid>
                <Grid x:Name="UninstallPanel" Style="{StaticResource InteractGrid}" Margin="-4400,0,0,0">
                    <Border x:Name="UninstallButton" Style="{StaticResource InteractButton}" Width="400" HorizontalAlignment="Center" MouseLeftButtonDown="UninstallButton_Click">
                        <TextBlock x:Name="UninstallText" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center">Uninstall</TextBlock>
                    </Border>
                </Grid>
                <Grid x:Name="UninstallDonePanel" Style="{StaticResource InteractGrid}" Margin="-5500,0,0,0">
                    <TextBlock Style="{StaticResource InformationHeaderText}" Margin="0,49,0,0" VerticalAlignment="Top">App uninstalled.</TextBlock>
                    <Border Style="{StaticResource InteractButton}" Width="120" HorizontalAlignment="Right" MouseLeftButtonDown="CloseApp">
                        <TextBlock Style="{StaticResource InteractButtonText}">Quit</TextBlock>
                    </Border>
                </Grid>
                <Grid x:Name="InstallDonePanel" Style="{StaticResource InteractGrid}" Margin="-1100,0,0,0">
                    <TextBlock VerticalAlignment="Top" FontSize="24" FontWeight="Bold" Margin="0,44,0,0">Installation done.</TextBlock>
                    <Border Style="{StaticResource InteractButton}" Width="120" HorizontalAlignment="Right" MouseLeftButtonDown="CloseApp">
                        <TextBlock Style="{StaticResource InteractButtonText}">Quit</TextBlock>
                    </Border>
                </Grid>
                <Grid x:Name="SameVersionPanel" Style="{StaticResource InteractGrid}" Margin="-2200,0,0,0">
                    <TextBlock Style="{StaticResource InformationHeaderText}" Margin="0,33,0,0" VerticalAlignment="Top">Same version already <LineBreak/> installed.</TextBlock>
                    <Border Style="{StaticResource InteractButton}" Width="120" HorizontalAlignment="Right" MouseLeftButtonDown="CloseApp">
                        <TextBlock Style="{StaticResource InteractButtonText}">OK</TextBlock>
                    </Border>
                </Grid>
                <Grid x:Name="OlderVersionPanel" Style="{StaticResource InteractGrid}" Margin="-3300,0,0,0">
                    <TextBlock Style="{StaticResource InformationHeaderText}" Margin="0,44,0,0" VerticalAlignment="Top">Version 0.0 installed.</TextBlock>
                    <TextBlock Style="{StaticResource InformationSubText}" Margin="0,76,0,0" VerticalAlignment="Top">Do you want to downgrade to version 0.1?</TextBlock>
                    <Border Style="{StaticResource InteractButton}" Width="110" HorizontalAlignment="Right" Margin="0,0,0,70">
                        <TextBlock Style="{StaticResource InteractButtonText}">Yes</TextBlock>
                    </Border>
                    <Border Style="{StaticResource ResourceKey=InteractButton}" Width="110" HorizontalAlignment="Right" Margin="0,0,0,4">
                        <TextBlock Style="{StaticResource ResourceKey=InteractButtonText}">No</TextBlock>
                    </Border>
                </Grid>
            </Grid>

        </Grid>

    </Grid>
</Window>
