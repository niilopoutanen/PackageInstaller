<Window x:Class="WPFinstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFinstaller"
        mc:Ignorable="d"
        Title="MainWindow" Height="320" Width="515" WindowStyle="None" Background="Transparent" MouseDown="Window_MouseDown" ResizeMode="CanResize" AllowsTransparency="True">

    <Grid x:Name="MainGrid">
        <Border x:Name="BackGround" Width="515" Height="320" CornerRadius="30" Panel.ZIndex="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#BB86FC" Offset="0.0"/>
                    <GradientStop Color="#F88DDA" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Grid x:Name="NavBar" Width="475" Height="20" VerticalAlignment="Top" Margin="0,20,0,0" Panel.ZIndex="1">
            <Viewbox x:Name="GitHubLogo" Width="20" HorizontalAlignment="Left" MouseLeftButtonDown="OpenLink" Cursor="Hand">
