                    </Path>
                </Canvas>
            </Viewbox>
            <Viewbox x:Name="MinimizeIcon" Width="20" Height="20" HorizontalAlignment="Right" Margin="0,0,30,0" MouseLeftButtonDown="MinimizeApp" Cursor="Hand">
                <Canvas Width="20" Height="20">
                    <Path Stroke="#FFFFFF" Fill="#FFFFFF" Width="20" Height="20" StrokeEndLineCap="Round" StrokeStartLineCap="Round" StrokeThickness="4.6" HorizontalAlignment="Center" VerticalAlignment="Center" Data="m 2.3166305 10.578697 15.3482925 0.06703">
