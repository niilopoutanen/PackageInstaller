                </Canvas>
            </Viewbox>
            <Viewbox x:Name="CloseIcon" Width="20" Height="20" HorizontalAlignment="Right" MouseLeftButtonDown="CloseApp" Cursor="Hand">
                <Canvas Width="20" Height="20">
                    <Path Width="20" Height="20" StrokeThickness="4.6" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Stroke="#FFFFFF" Data="M 4.5972578 4.5498602 15.402742 15.45014" />
