<Window x:Class="Package_installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Package_installer"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Title="MainWindow" Height="430" Width="335" WindowStyle="None" Background="Transparent"
        MouseLeftButtonDown="Window_MouseDown">

    <Border
        Background="#121212"
        BorderBrush="#3a3a3a"
        BorderThickness="2"
        CornerRadius="30">
        <Grid>
            <StackPanel
                VerticalAlignment="Top"
                Height="250">
                <Image
                    Margin="0,30,0,20"
                    Width="150"
                    Height="150" 
                    Source="/Resources/icon.png"/>
                <TextBlock
                    Text="Unity tetris"
                    VerticalAlignment="Center"
                    TextAlignment="Center"
                    FontSize="40"
                    Style="{StaticResource interBold}"/>
            </StackPanel>
            <Grid>
                <StackPanel
                    x:Name="MainView"
                    Height="130"
                    VerticalAlignment="Bottom">
                    <Border
                        MouseLeftButtonDown="InstallApp"
                        Margin="0,0,0,15"
                        Width="280"
                        Height="40"
                        CornerRadius="12"
                        Background="#3662FF">
                        <TextBlock 
                            Text="Install"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Style="{StaticResource interSemiBold}"
                            FontSize="20"/>
                    </Border>
                    <Border
                        MouseLeftButtonDown="CloseApp"
                        Width="280"
                        Height="40"
                        CornerRadius="12"
                        Background="#343434">
                        <TextBlock 
                            Text="Cancel"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Style="{StaticResource interMedium}"
                            FontSize="20"/>
                    </Border>
                </StackPanel>

                <StackPanel
                    x:Name="InstallingView"
                    Height="130"
                    Visibility="Hidden"
                    VerticalAlignment="Bottom">

                </StackPanel>

                <StackPanel
                    x:Name="InstallDoneView"
                    Height="130"
                    Visibility="Hidden"
                    VerticalAlignment="Bottom">
                    <Border
                        MouseLeftButtonDown="OpenApp"
                        Margin="0,0,0,15"
                        Width="280"
                        Height="40"
                        CornerRadius="12"
                        Background="#3662FF">
                        <TextBlock 
                            Text="Open app"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Style="{StaticResource interSemiBold}"
                            FontSize="20"/>
                    </Border>
                    <Border
                        MouseLeftButtonDown="CloseApp"
                        Width="280"
                        Height="40"
                        CornerRadius="12"
                        Background="#343434">
                        <TextBlock 
                            Text="Quit"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Style="{StaticResource interMedium}"
                            FontSize="20"/>
                    </Border>
                </StackPanel>
            </Grid>

        </Grid>


    </Border>

</Window>
