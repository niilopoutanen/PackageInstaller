<Window x:Class="WPFinstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFinstaller"
        mc:Ignorable="d"
        Title="MainWindow" Height="320" Width="530" WindowStyle="None" MouseDown="Form_MouseDown"
        AllowsTransparency="True" Background="Transparent">
        
        
    <Grid>
        <Border BorderBrush="#121212" BorderThickness="10" CornerRadius="20" Background="#121212"/>
        <Border Height="170" VerticalAlignment="Top" CornerRadius="20,20,0,0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,-0.5" EndPoint="0, 1.5">
                    <LinearGradientBrush.GradientStops>
                        <GradientStop Offset="0.0" Color="#5e368f"/>
                        <GradientStop Offset="1.0" Color="#BB86FC" />
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
    </Grid>
</Window>
